<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="手机验证"
        android:textSize="@dimen/text_size"
        android:textColor="@color/black" >
    </TextView>
    
    <include 
        android:id="@+id/include_title_divide"
        layout="@layout/divide_line_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:layout_gravity="center_vertical"
            android:text="手机号：" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/text_size"
            android:layout_gravity="center_vertical"
            android:maxLength="11"
        	android:inputType="phone"
            android:hint="请输入你的手机号码"
            android:ems="10" >

        </EditText>

    </LinearLayout>
    
    <include layout="@layout/divide_line_bold" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:layout_gravity="center_vertical"
        	android:paddingLeft="12dp" 
        	android:paddingTop="12dp" 
        	android:paddingBottom="12dp" 
            android:text="验证码：" />

        <EditText
            android:id="@+id/edt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="@dimen/text_size"
            android:paddingTop="12dp" 
        	android:paddingBottom="12dp" 
        	android:inputType="phone"
            android:layout_gravity="center_vertical"
            android:hint="输入验证码"
            android:ems="6" >

        </EditText>
        
        <include layout="@layout/divide_line_vertical_bold" />
        
        <net.nc.uialert.widget.TimerTextView
            xmlns:timer="http://schemas.android.com/apk/res-auto"
            android:id="@+id/txt_get_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/theme"
            android:paddingTop="12dp" 
        	android:paddingBottom="12dp" 
        	android:background="@drawable/selector_alert_item"
        	android:clickable="true"
        	timer:textNumber="20"
            android:text="获取验证码" />

    </LinearLayout>

    <include layout="@layout/divide_line_bold" />

    <LinearLayout
        android:id="@+id/llay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_weight="1.0"
            android:background="@drawable/selector_bottom_left"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black_light" />

        <include layout="@layout/divide_line_vertical_bold" />

        <TextView
            android:id="@+id/txt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_weight="1.0"
            android:background="@drawable/selector_bottom_right"
            android:gravity="center"
            android:textColor="@color/theme"
            android:text="确定"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

</LinearLayout>