<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_focused="true" android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/pressed" />

            <corners android:bottomLeftRadius="@dimen/radius"
                android:bottomRightRadius="@dimen/radius" />
        </shape></item>
    <item android:state_focused="false" android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/pressed" />

            <corners android:bottomLeftRadius="@dimen/radius"
                android:bottomRightRadius="@dimen/radius" />
        </shape></item>
    <item android:state_focused="false" android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/white" />

            <corners android:bottomLeftRadius="@dimen/radius"
                android:bottomRightRadius="@dimen/radius" />
        </shape></item>

</selector>
